= form_for @b_question do |f|
  - if @b_question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@b_question.errors.count, "error")} prohibited this b_question from being saved:"
      %ul
        - @b_question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
